<!-- menú de navegación -->
<%= render 'shared/navbar' %>
<p id="notice"><%= notice %></p>
<h1 class="jumbotron"><%= @cook.name %></h1>



<section class="">
	<div class="row">
		<div class="col">
			<%= image_tag @cook.picture, class: 'card-img-top img-fluid' %>
			<div class="card">
			  <div class="card-body">
			    <h4 class="card-title"><%= @cook.name%></h4>
			    <p class="card-text"><%= @cook.biography %></p>
			    <p> <%= @cook.address_commune %></p>
			    <p> <%= @cook.address_region %></p>
			  </div>
			</div>
		</div>
		<div class="col">
				<section class="menus">
					<div class="row">
						<%= @menus.each_slice(2) do |row|  %>
							<% row.each do |menu| %>
								<div class="col">
									<div class="card-deck"">
										<div class="card">
											<%= image_tag menu.picture, class: 'card-img-top img-fluid menu-img' %>
											<div class="card-body">
											<h5><%= menu.name %></h5>
											<p><%= "$ " + menu.price.to_s %><p>
											<p class="card-text"><%= menu.description %></p>
											<%= link_to "Reservar",  root_path , class: "btn btn-success" %>
										</div>
									</div>
								</div>
							</div>
						<% end %>
					<div class="w-100" style="margin-top: 20px"></div>
					<% end %>
					</div>
				</section>
		</div>
	</div>	
</section>




