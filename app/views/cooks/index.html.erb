<!-- Cards -->
<section class="container mt-5">
  <div class="card-deck">
    <% @cooks.each do |cook| %>
    <div class="card">
      <%= image_tag cook.picture, class: 'card-img-top' %>
      <div class="card-body">
        <h4 class="card-title"><%= cook.name%></h4>
        <p class="card-text"><%= cook.biography %></p>
        <p> <%= cook.address_commune %></p>
        <p> <%= cook.address_region %></p>
      </div>
      <div class="card-footer d-flex flex-row justify-content-center">
        <a href="#" class="btn btn-outline-primary">Ver menú</a>
      </div>
    </div>
    <% end %>
  </div>
</section>
<!-- Fin Cards -->
